<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>@ViewBag.Title</title>

    <!-- Bootstrap -->
    <link href="//ssel-apps.eecs.umich.edu/static/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link href="~/Content/Site.css" rel="stylesheet" />

    @RenderSection("styles", false)
</head>
<body>
    <div class="container-fluid" style="padding-top: 20px;">
        @RenderBody()
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="//ssel-apps.eecs.umich.edu/static/lib/jquery/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="//ssel-apps.eecs.umich.edu/static/lib/bootstrap/js/bootstrap.min.js"></script>

    <script src="//ssel-apps.eecs.umich.edu/static/lib/moment/moment.min.js"></script>
    <script src="//ssel-apps.eecs.umich.edu/static/lib/urijs/URI.min.js"></script>

    <script src="~/Scripts/handlebars-v4.0.10.js"></script>

    <script>
        Handlebars.registerHelper("format_date", function (context, options) {
            var m = moment();
            var f = "MM/DD/YYYY h:mm:ss A";

            if (context.length > 0)
                m = moment(new Date(context[0]));

            if (!m.isValid())
                m = moment();

            if (context.length > 1)
                f = context[1];

            return new Handlebars.SafeString(m.format(f));
        });

        Handlebars.registerHelper("format_currency", function (context, options) {
            var val = parseFloat(context);
            if (isNaN(val)) val = 0;
            var result = "$" + val.toFixed(2);
            console.log(result);
            return new Handlebars.SafeString(result);
        });
    </script>

    @RenderSection("scripts", false)
</body>
</html>